<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/isLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y32"
        android:background="@color/bg_lineEBF"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:layout_weight="1"
            android:text="登录社区 享受学习互动乐趣"
            android:textColor="@color/text_gray666"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/goto_login"
            android:layout_width="@dimen/x76"
            android:layout_height="@dimen/y18"
            android:layout_marginRight="@dimen/x9"
            android:background="@drawable/text_yellow_bg_solid_frame"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="立即登录"
            android:textColor="@color/White"
            android:textSize="@dimen/x12" />
    </LinearLayout>

    <com.yizhilu.community.view.XListView
        android:id="@+id/hot_topic_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="40dp"
        android:text="暂无热点，点击刷新"
        android:textColor="@color/text_color_normal"
        android:textSize="14sp" />

</LinearLayout>