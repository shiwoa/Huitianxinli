<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6"
    android:orientation="vertical" >

    <include layout="@layout/login_register_titlelayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_e4e7eb" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x11"
            android:paddingRight="@dimen/x11" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dl_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x23"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/login_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_4E"
                        android:textSize="@dimen/x19" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y6"
                        android:text="登陆次数"
                        android:textColor="@color/color_80"
                        android:textSize="@dimen/x9" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginTop="@dimen/y8"
                    android:text="次"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/x8" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_db" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ks_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x23"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/join_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_4E"
                        android:textSize="@dimen/x19" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y6"
                        android:text="参加考试"
                        android:textColor="@color/color_80"
                        android:textSize="@dimen/x9" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginTop="@dimen/y8"
                    android:text="次"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/x8" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_db" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/xx_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x23"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/look_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_4E"
                        android:textSize="@dimen/x19" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y6"
                        android:text="学习次数"
                        android:textColor="@color/color_80"
                        android:textSize="@dimen/x9" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginTop="@dimen/y8"
                    android:text="次"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/x8" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_db" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bj_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x23"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/publish_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_4E"
                        android:textSize="@dimen/x19" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y6"
                        android:text="记录笔记"
                        android:textColor="@color/color_80"
                        android:textSize="@dimen/x9" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginTop="@dimen/y8"
                    android:text="次"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/x8" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_db" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/pl_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x23"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/publish_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_4E"
                        android:textSize="@dimen/x19" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y6"
                        android:text="发表评论"
                        android:textColor="@color/color_80"
                        android:textSize="@dimen/x9" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginTop="@dimen/y8"
                    android:text="次"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/x8" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_db" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sc_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x23"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/last_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_4E"
                        android:textSize="@dimen/x19" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y6"
                        android:text="上次登录"
                        android:textColor="@color/color_80"
                        android:textSize="@dimen/x9" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_db" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y42"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/zc_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x23"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/regist_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_4E"
                        android:textSize="@dimen/x19" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y6"
                        android:text="注册时间"
                        android:textColor="@color/color_80"
                        android:textSize="@dimen/x9" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_db" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>