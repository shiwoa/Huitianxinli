<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y98"
                android:background="@drawable/rectangle_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/y42" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/y10"
                        android:layout_marginLeft="@dimen/x24"
                        android:orientation="horizontal" >

                        <FrameLayout
                            android:layout_width="@dimen/x54"
                            android:layout_height="@dimen/x54" >

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/head_layout_bg"
                                android:scaleType="fitXY" />

                            <com.yizhilu.view.CircleImageView
                                android:id="@+id/head_iamge"
                                android:layout_width="@dimen/x50"
                                android:layout_height="@dimen/x50"
                                android:layout_gravity="center"
                                android:background="@drawable/head_bg"
                                app:border_color="@color/White"
                                app:border_width="0dp" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/x15"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="@color/White"
                                android:textSize="@dimen/x15" 
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/y8"
                                android:gravity="center_vertical" 
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/signature"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:textColor="@color/White"
                                    android:textSize="@dimen/x12" 
                                    
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingRight="@dimen/x13"
                                    android:visibility="gone" >

                                    <ImageView
                                        android:id="@+id/setting_image"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/setting_head_bg" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y42"
                    android:layout_alignParentBottom="true"
                    android:background="@color/White"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/my_course"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/courseNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/White"
                            android:textSize="@dimen/x13"
                            android:visibility="gone" />
						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:background="@drawable/course_my"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的课程"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/x12"
                            android:layout_marginTop="@dimen/y2" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_e6" />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/download_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/download_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/White"
                            android:textSize="@dimen/x13"
                            android:visibility="gone" />
						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:background="@drawable/load_my"/>
                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="离线下载"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/x12"
                            android:layout_marginTop="@dimen/y2" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_e6" />

                    <LinearLayout
                        android:id="@+id/playHistory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/playJiluNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/White"
                            android:textSize="@dimen/x13"
                            android:visibility="gone" />
						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:background="@drawable/foot_my"/>
                        <TextView
                            android:id="@+id/TextView04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="播放记录"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/x12"
                            android:layout_marginTop="@dimen/y2" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_myorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y13"
                android:background="@color/White"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:id="@+id/head_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/order" />

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x7"
                    android:layout_toRightOf="@id/head_image"
                    android:text="@string/myOrder"
                    android:textColor="@color/Black" />

                <ImageView
                    android:id="@+id/prompt_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/text_view"
                    android:layout_marginLeft="@dimen/x2"
                    android:layout_toRightOf="@id/text_view"
                    android:background="@drawable/prompt"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x7"
                    android:src="@drawable/rectangle" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_discount_coupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y4"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/discount_coupon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="@string/discount_coupon"
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x7"
                        android:src="@drawable/rectangle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_collection_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y4"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/collection" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="@string/myCollect"
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x7"
                        android:src="@drawable/rectangle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/personal_information"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y13"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/persona_account" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="@string/personal_information"
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x7"
                        android:src="@drawable/rectangle" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_myaccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y4"
                android:background="@color/White"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:id="@+id/account_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/personal_account" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x7"
                    android:layout_toRightOf="@id/account_image"
                    android:text="@string/personal_account"
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x7"
                        android:background="@drawable/rectangle" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/personal_resume"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y4"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/resume" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="@string/study_statistics"
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x7"
                        android:src="@drawable/rectangle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_systemAcm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y13"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/system_notice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="@string/system_notice"
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x7"
                        android:src="@drawable/rectangle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/opinion_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y4"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="@string/opinion_feedback"
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x7"
                        android:src="@drawable/rectangle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/system_set_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/y4"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x16" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="@string/system_setting"
                    android:textColor="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x7"
                        android:src="@drawable/rectangle" />
                </LinearLayout>
            </LinearLayout>

            <!-- 退出登录的布局 -->

            <TextView
                android:id="@+id/exit_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y13"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginTop="@dimen/y13"
                android:background="@drawable/exit_bg"
                android:gravity="center"
                android:text="@string/exit_account"
                android:textColor="@color/exit_text_bg"
                android:textSize="@dimen/x15"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>