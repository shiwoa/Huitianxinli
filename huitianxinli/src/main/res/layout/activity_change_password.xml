<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/Blue" >

        <LinearLayout
            android:id="@+id/change_password_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/back_button" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/change_password"
            android:textColor="@color/White"
            android:textSize="@dimen/x16" />

        <Button
            android:id="@+id/password_preserve"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_bg"
            android:text="@string/save"
            android:textColor="@color/White"
            android:textSize="@dimen/x10" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y9" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y31"
            android:background="@color/White"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/old_password"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x16"
                android:background="@null"
                android:hint="@string/pwd_oldpwd"
                android:inputType="textPassword"
                android:textColor="@color/color_33"
                android:textSize="@dimen/x15" />
        </RelativeLayout>

        <View
            android:id="@+id/oldpwd_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y31"
            android:background="@color/White" >

            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x16"
                android:background="@null"
                android:hint="@string/pwd_newpwd"
                android:inputType="textPassword"
                android:textColor="@color/color_33"
                android:textSize="@dimen/x15" />
        </RelativeLayout>

        <View
            android:id="@+id/newpwd_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/color_F6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y31"
            android:background="@color/White" >

            <EditText
                android:id="@+id/password_resumeLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x16"
                android:background="@null"
                android:hint="@string/pwd_input"
                android:inputType="textPassword"
                android:textColor="@color/color_33"
                android:textSize="@dimen/x15" />
        </RelativeLayout>

        <View
            android:id="@+id/inputpwd_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F6" />

        <LinearLayout
            android:id="@+id/pwd_correct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y31"
            android:layout_marginLeft="@dimen/x16"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/wrong" />

            <TextView
                android:id="@+id/pwd_CorrectContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x5"
                android:text="@string/pwd_correctpwd"
                android:textColor="@color/color_00"
                android:textSize="@dimen/x15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>