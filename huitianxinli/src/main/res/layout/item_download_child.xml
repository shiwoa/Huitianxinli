<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/White"
        android:paddingLeft="@dimen/x16"
	    android:paddingRight="@dimen/x9" >

        <LinearLayout
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:gravity="center_vertical" >
			<ImageView
	            android:id="@+id/chile_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/section"/>
            <TextView
                android:id="@+id/download_child_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x11"
                android:text="高一数学"
                android:textColor="@color/color_67"
                android:textSize="@dimen/x12" />
        </LinearLayout>
        <TextView
	        android:id="@+id/course_isfree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:text="@string/isFree"
	        android:textColor="@color/Red"
	        android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/x16"
        android:background="@color/color_F6" />

</LinearLayout>