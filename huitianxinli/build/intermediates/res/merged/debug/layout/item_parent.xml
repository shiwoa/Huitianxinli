<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y28"
        android:background="@color/White"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/parent_headImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/xian" />

            <TextView
                
                android:id="@+id/parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x9"
                android:singleLine="true"
                android:text="aaa"
                android:textColor="@color/color_32"
                android:textSize="@dimen/x13" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/has_free"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/x9"
                android:gravity="center"
                android:textColor="@color/Red"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/child_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x9"
                android:gravity="center"
                android:textColor="@color/color_32"
                android:textSize="@dimen/x13" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F6" />

</LinearLayout>