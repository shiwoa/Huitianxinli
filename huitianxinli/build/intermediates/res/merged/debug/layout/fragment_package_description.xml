<?xml version="1.0" encoding="utf-8"?>
<!-- 课程介绍的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y54"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/courseTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x16"
                    android:singleLine="true"
                    android:text="比吃肉还爽的美食"
                    android:textColor="@color/text_gray333"
                    android:textSize="@dimen/x15" />

                <LinearLayout
                    android:id="@+id/price_pay_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y6"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x16"
                        android:text="￥"
                        android:textColor="@color/text_gray555"
                        android:textSize="@dimen/x15" />

                    <TextView
                        android:id="@+id/course_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1980"
                        android:textColor="@color/text_grayEE7"
                        android:textSize="@dimen/x15" />

                    <TextView
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="￥"
                        android:textColor="@color/text_grayB1B"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:id="@+id/price_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1980"
                        android:textColor="@color/text_grayB1B"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:id="@+id/purchaseText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/text_green_bg_solid_frame"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="@string/purchase"
                        android:textColor="@color/White"
                        android:textSize="@dimen/x14"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/free_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/freefree"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_e5" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y14"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/y8"
                    android:drawableTop="@drawable/level"
                    android:gravity="center"
                    android:text="难度"
                    android:textColor="@color/text_gray737"
                    android:textSize="@dimen/x9" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/y8"
                    android:drawableTop="@drawable/ready_time"
                    android:gravity="center"
                    android:text="准备时间"
                    android:textColor="@color/text_gray737"
                    android:textSize="@dimen/x9" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/y8"
                    android:drawableTop="@drawable/fenliang"
                    android:gravity="center"
                    android:text="常用分量"
                    android:textColor="@color/text_gray737"
                    android:textSize="@dimen/x9" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/y8"
                    android:drawableTop="@drawable/cook_time"
                    android:gravity="center"
                    android:text="烹饪用时"
                    android:textColor="@color/text_gray737"
                    android:textSize="@dimen/x9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y5"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/degree_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_gray737"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/readyTime_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_gray737"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/component_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_gray737"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/cookTime_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_gray737"
                    android:textSize="@dimen/x12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y6"
                android:background="@color/bg_lineF1F" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y6"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginTop="@dimen/y9"
                android:text="正在学习的人"
                android:textColor="@color/text_gray1a1"
                android:textSize="@dimen/x13"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_e5"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y67"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <GridView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/leaning_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"
                        android:background="@drawable/home_more" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y6"
                android:background="@color/bg_lineF1F" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y10" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/introduce"
                    android:textColor="@color/text_19"
                    android:textSize="@dimen/x13" />

                <ImageView
                    android:id="@+id/recommend_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/open"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/webView_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10" >

                <WebView
                    android:id="@+id/course_webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y6"
                android:layout_marginTop="@dimen/y7"
                android:background="@color/backgroundGray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y6"
                android:layout_marginTop="@dimen/y7"
                android:background="@color/backgroundGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y8"
                    android:text="讲师列表"
                    android:textColor="@color/text_19"
                    android:textSize="@dimen/x13" />

                <com.yizhilu.view.NoScrollListView
                    android:id="@+id/teacher_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" >
                </com.yizhilu.view.NoScrollListView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y6"
                android:background="@color/bg_lineF1F" />

            <TextView
                android:id="@+id/related_recommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:drawableRight="@drawable/home_more"
                android:paddingBottom="@dimen/y8"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/y8"
                android:text="相关推荐"
                android:textColor="@color/text_19"
                android:textSize="@dimen/x13"
                android:visibility="gone" />

            <com.yizhilu.view.NoScrollGridView
                android:id="@+id/home_recommend_course_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:horizontalSpacing="@dimen/x10"
                android:listSelector="@android:color/transparent"
                android:numColumns="2"
                android:verticalSpacing="@dimen/x10"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>