<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y11"
        android:paddingTop="@dimen/y11" >

        <ImageView
            android:id="@+id/teacher_image"
            android:layout_width="@dimen/x54"
            android:layout_height="@dimen/x40"
            android:background="@drawable/sprite" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x9"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/teacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaa"
                    android:textColor="@color/Blue"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/gradeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:text="ccc"
                    android:textColor="@color/color_b3"
                    android:textSize="@dimen/x11" />
            </LinearLayout>

            <TextView
                android:id="@+id/teacher_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/x10"
                android:layout_weight="1"
                android:maxLines="2"
                android:singleLine="true"
                android:textColor="@color/color_b3"
                android:textSize="@dimen/x11" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F6" />

</LinearLayout>