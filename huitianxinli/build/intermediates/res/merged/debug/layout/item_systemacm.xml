<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F6"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y14"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y9"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/systemacm_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台发布"
                android:textColor="@color/Blue"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/systemacm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:textSize="@dimen/x12"
                android:textColor="@color/color_99" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:textSize="@dimen/x12"
                android:textColor="@color/color_99"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x13"
            android:layout_weight="3"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x11"
            android:paddingTop="@dimen/y6"
            android:paddingBottom="@dimen/y6"
            android:background="@drawable/systemacm_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/systemacm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x13"
                android:textColor="@color/color_1a" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y8"
                android:textSize="@dimen/x12"
                android:textColor="@color/color_99"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>