<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/heder_my_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y30"
            android:layout_marginLeft="@dimen/x14"
            android:gravity="center_vertical"
            android:text="我的小组"
            android:textColor="@color/text_gray555" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_lineEBF" />

        <TextView
            android:id="@+id/goto_find"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginLeft="@dimen/x14"
            android:gravity="center_vertical"
            android:text="您还没有发现小组，点击发现小组 >"
            android:textColor="@color/text_blue3F8" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_lineF1F" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/x14"
        android:gravity="center_vertical"
        android:text="热门小组"
        android:textColor="@color/text_gray555" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_lineEBF" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_group_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y75"
        android:layout_gravity="center" />

</LinearLayout>