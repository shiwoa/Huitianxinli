<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y16"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.yizhilu.view.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:background="@drawable/weijiazai_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_c4"
                    android:textSize="@dimen/x13" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x9"
                    android:textColor="@color/text_gray777"
                    android:textSize="@dimen/x11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x14"
        android:layout_marginTop="@dimen/x9"
        android:textColor="@color/color_80"
        android:textSize="@dimen/x13" />

    <WebView
        android:id="@+id/discuss_content_webview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/y8"
        android:text="aaa"
        android:textColor="@color/color_4d"
        android:textSize="@dimen/x12"
      />

