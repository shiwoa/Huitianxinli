<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <LinearLayout
	        android:id="@+id/parentLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingRight="@dimen/x8"
	        android:minHeight="@dimen/y32"
	        android:background="@drawable/chapter_frame"
	        android:gravity="center_vertical">
	        <ImageView
	            android:id="@+id/parentImage"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/x8"
	            android:background="@drawable/iconfont_wodekecheng"/>
	        <TextView
	            android:id="@+id/catalogueName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/x8"
	            android:textSize="@dimen/x12"
	            android:textColor="@color/color_9a"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
