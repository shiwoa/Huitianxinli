<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparenc"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/x231"
        android:layout_height="@dimen/y92"
        android:background="@drawable/network_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x46"
            android:layout_marginTop="@dimen/y23"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/network_tubiao" />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/network_no"
                android:textColor="@color/color_33"
                android:textSize="@dimen/x14"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                />
        </LinearLayout>
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/network_view_heng"
            android:layout_marginTop="@dimen/y24"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/dialognet_linear_sure"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/exit_select_bgcolor_left"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialogbtnsure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/x14" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/network_view_su" />

            <LinearLayout
                android:id="@+id/dialognet_linear_cancle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/exit_select_bgcolor"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialogbtncancle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="去离线学习"
                    android:textColor="@color/Blue"
                    android:textSize="@dimen/x14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>