<?xml version="1.0" encoding="utf-8"?>
<!-- 系统设置的布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8"
    android:orientation="vertical" >

    <include layout="@layout/login_register_titlelayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y6"
                android:background="@color/color_f8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y31"
                android:background="@color/White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/system_wifi_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_weight="1"
                    android:text="@string/system_wifi"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/x15" />

                <CheckBox
                    android:id="@+id/system_wifi_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x12"
                    android:checked="true"
                    android:button="@drawable/system_setting_selector" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@color/color_f8" />

            <LinearLayout
                android:id="@+id/system_eliminate"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y31"
                android:background="@color/White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/system_eliminate_text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_weight="1"
                    android:text="@string/system_eliminate"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:id="@+id/system_eliminate_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x12"
                    android:textColor="@color/tabText"
                    android:textSize="@dimen/x15" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@color/color_f8" />

            <LinearLayout
                android:id="@+id/system_opinion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y31"
                android:background="@color/White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/system_opinion_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_weight="1"
                    android:text="@string/system_opinion"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:id="@+id/system_opinion_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x12"
                    android:src="@drawable/choice" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@color/color_f8" />

            <RelativeLayout
                android:id="@+id/system_Testing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="@color/White" >

                <TextView
                    android:id="@+id/system_Testing_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/system_edition"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12"
                    android:src="@drawable/choice" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/version_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x12"
                    android:layout_marginTop="@dimen/y8"
                    android:layout_toRightOf="@id/system_Testing_text"
                    android:src="@drawable/prompt" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@color/color_f8" />

            <LinearLayout
                android:id="@+id/system_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y31"
                android:background="@color/White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/system_about_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_weight="1"
                    android:text="@string/system_about"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/x15" />

                <ImageView
                    android:id="@+id/system_about_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/x12"
                    android:src="@drawable/choice" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_f8" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>